<article class="product-card">
	<a class="product-card__link" href="{{ page.url }}">
		<div class="product-card__image">
			<div class="fill">
				{% include 'partials/img.html.twig' with {'image': page.media.images|first} %}
			</div>
		</div>
		<div class="product-card__info big">
			<div class="product-card__title">{{ page.title }}</div>
			<div class="product-card__description">{{ page.description }}</div>
		</div>
	</a>
</article>
